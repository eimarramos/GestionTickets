<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestionTickets.UI.Views.Tickets.TicketsPage"
             xmlns:local="clr-namespace:GestionTickets.UI.ViewModels"
             xmlns:models="clr-namespace:GestionTickets.UI.Models"
             xmlns:entities="clr-namespace:GestionTickets.Domain.Entities;assembly=GestionTickets.Domain"
             x:DataType="local:TicketsViewModel"
             xmlns:shared="clr-namespace:GestionTickets.UI.Views.SharedViews"
             x:Name="TicketsPageView">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <shared:TitleView Grid.Row="0" />
            <Border Grid.Row="1"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 10"
                    Stroke="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray600}}"
                    Padding="15,5"
                    Margin="10,10,10,0">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnMonthPickerTapped" />
                </Border.GestureRecognizers>
                <Grid ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Picker x:Name="monthPicker"
                            Title="Selecciona un mes"
                            Grid.Column="0"
                            ItemsSource="{Binding AvailableMonths}"
                            ItemDisplayBinding="{Binding Display}"
                            SelectedItem="{Binding SelectedMonthYear}"
                            TextColor="{AppThemeBinding Light={StaticResource PrimaryText }, Dark={StaticResource PrimaryDarkText}}"
                            FontFamily="{StaticResource CatamaranSemiBold}"
                            FontSize="24" />
                    <Image Grid.Column="1"
                           Source="search.png"
                           IsVisible="{OnPlatform WinUI=false, Default=true}" />
                </Grid>
            </Border>

            <Border Grid.Row="2"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 10"
                    Stroke="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray600}}"
                    Margin="10,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0"
                          BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray600}}"
                          Padding="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Label Text="Nº Ticket"
                               FontSize="16"
                               TextColor="{AppThemeBinding Light={StaticResource PrimaryText}, Dark={StaticResource PrimaryDarkText}}"
                               HorizontalOptions="Center"
                               Grid.Column="0" />
                        <Label Text="Precio"
                               FontSize="16"
                               TextColor="{AppThemeBinding Light={StaticResource PrimaryText}, Dark={StaticResource PrimaryDarkText}}"
                               HorizontalOptions="Center"
                               Grid.Column="1" />
                        <Label Text="Fecha"
                               FontSize="16"
                               TextColor="{AppThemeBinding Light={StaticResource PrimaryText}, Dark={StaticResource PrimaryDarkText}}"
                               HorizontalOptions="Center"
                               Grid.Column="2" />
                        <ImageButton Grid.Column="3"
                                     Source="edit.png"
                                     Padding="10,0"
                                     Opacity="0"
                                     IsEnabled="False" />
                        <ImageButton Grid.Column="4"
                                     Source="delete.png"
                                     Padding="10,0"
                                     Opacity="0"
                                     IsEnabled="False" />
                    </Grid>

                    <CollectionView Grid.Row="1"
                                    ItemsSource="{Binding Tickets}"
                                    SelectedItem="{Binding SelectedTicket, Mode=TwoWay}"
                                    SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="entities:Ticket">
                                <Grid BackgroundColor="{OnPlatform WinUI=Transparent}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="1" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Label Text="{Binding TicketNumber}"
                                           Grid.Column="0"
                                           FontSize="16"
                                           TextColor="{AppThemeBinding Light={StaticResource PrimaryText}, Dark={StaticResource PrimaryDarkText}}"
                                           HorizontalOptions="Center"
                                           Padding="0,10" />
                                    <Label Text="{Binding Price, StringFormat='{0:F2} €'}"
                                           Grid.Column="1"
                                           FontSize="16"
                                           TextColor="{AppThemeBinding Light={StaticResource PrimaryText}, Dark={StaticResource PrimaryDarkText}}"
                                           HorizontalOptions="Center"
                                           Padding="0,10" />
                                    <Label Text="{Binding Date, StringFormat='{0:dd/MM/yy}'}"
                                           Grid.Column="2"
                                           FontSize="16"
                                           TextColor="{AppThemeBinding Light={StaticResource PrimaryText}, Dark={StaticResource PrimaryDarkText}}"
                                           HorizontalOptions="Center"
                                           Padding="0,10" />
                                    <ImageButton Grid.Column="3"
                                                 Source="edit.png"
                                                 Command="{Binding Path=BindingContext.GoToEditTicketCommand, Source={x:Reference TicketsPageView}}"
                                                 CommandParameter="{Binding Id}" 
                                                 Style="{StaticResource Edit}"/>
                                    <ImageButton Grid.Column="4"
                                                 Source="delete.png"
                                                 Command="{Binding Path=BindingContext.DeleteTicketCommand, Source={x:Reference TicketsPageView}}"
                                                 CommandParameter="{Binding Id}"
                                                 Style="{StaticResource Delete}"/>
                                    <BoxView Grid.Row="1"
                                             Grid.ColumnSpan="5"
                                             HeightRequest="1"
                                             Color="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray600}}" />
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <Grid Grid.Row="2"
                          ColumnSpacing="20"
                          Padding="10, 15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Line Grid.Row="0"
                              Grid.Column="0"
                              X1="170"
                              Stroke="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray600}}"
                              StrokeThickness="2"
                              HorizontalOptions="{OnPlatform WinUI=End, Default=Start }" />

                        <Label Grid.Row="1"
                               Grid.Column="0"
                               HorizontalOptions="{OnPlatform WinUI=End, Default=Start}"
                               Text="{Binding Total, StringFormat='Total      {0:F2} €', Mode=OneWay}"
                               TextColor="{AppThemeBinding Light={StaticResource PrimaryText}, Dark={StaticResource PrimaryDarkText}}"
                               FontSize="20"
                               FontAttributes="Bold" />

                        <Button Grid.Row="0"
                                Grid.RowSpan="2"
                                Grid.Column="1"
                                Padding="12,10"
                                ImageSource="share.png"
                                Text="Compartir"
                                Command="{Binding SharePdfCommand}" />
                    </Grid>
                </Grid>
            </Border>
        </Grid>
        <shared:LoaderView />
    </Grid>
</ContentPage>