<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestionTickets.UI.Views.CreateTickets.CreateTicketsPage"
             xmlns:shared="clr-namespace:GestionTickets.UI.Views.SharedViews">
    <Grid>
        <Grid RowSpacing="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <shared:TitleView Grid.Row="0"
                              Margin="15,0,15,0" />
            <ScrollView Grid.Row="1">
                <Border VerticalOptions="Center"
                        Margin="11,0,11,0"
                        Padding="10"
                        Stroke="{StaticResource Gray100}"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 10">
                    <Grid RowSpacing="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0"
                               Text="Agregar u nuevo ticket"
                               TextColor="{AppThemeBinding Light={StaticResource PrimaryText}, Dark={StaticResource PrimaryDarkText}}"
                               FontSize="24"
                               FontFamily="{StaticResource CatamaranSemiBold}"
                               Padding="5,10" />
                        <Label Grid.Row="1"
                               Text="Número (opcional)"
                               Style="{StaticResource EntryLabel}" />
                        <Entry Grid.Row="2"
                               Placeholder="Auto generado si se deja vacío"
                               Keyboard="Numeric"
                               ReturnType="Next" />
                        <Label Grid.Row="3"
                               Text="Precio"
                               Style="{StaticResource EntryLabel}" />
                        <Entry Grid.Row="4"
                               Placeholder="Ingrese el precio"
                               Keyboard="Numeric"
                               ReturnType="Next" />
                        <Label Grid.Row="5"
                               Text="Fecha"
                               Style="{StaticResource EntryLabel}" />
                        <Entry Grid.Row="6"
                               Placeholder="Introduce la fecha"
                               Keyboard="Date"
                               ReturnType="Next" />
                        <Button Grid.Row="7"
                                Margin="0,97,0,0"
                                Text="Agregar Ticket" />
                    </Grid>
                </Border>
            </ScrollView>
        </Grid>
        <shared:LoaderView />
    </Grid>
</ContentPage>