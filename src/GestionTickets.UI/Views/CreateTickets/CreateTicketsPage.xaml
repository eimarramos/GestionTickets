<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestionTickets.UI.Views.CreateTickets.CreateTicketsPage"
             xmlns:local="clr-namespace:GestionTickets.UI.ViewModels"
             x:DataType="local:CreateTicketsViewModel"
             xmlns:shared="clr-namespace:GestionTickets.UI.Views.SharedViews">
    <Grid>
        <Grid RowSpacing="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <shared:TitleView Grid.Row="0" />
            <ScrollView Grid.Row="1">
                <Border VerticalOptions="Center"
                        Margin="11,0,11,0"
                        Padding="10"
                        Stroke="{StaticResource Gray100}"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 10">
                    <Grid RowSpacing="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0"
                               Text="Agregar un nuevo ticket"
                               TextColor="{AppThemeBinding Light={StaticResource PrimaryText}, Dark={StaticResource PrimaryDarkText}}"
                               FontSize="24"
                               FontFamily="{StaticResource CatamaranSemiBold}"
                               Padding="5,0" />

                        <Label Grid.Row="1"
                               Text="Número (opcional)"
                               Style="{StaticResource EntryLabel}" />
                        <Border Grid.Row="2"
                                Style="{StaticResource EntryBorder}">
                            <HorizontalStackLayout>
                                <Entry Placeholder="Auto generado si se deja vacío"
                                       Keyboard="Numeric"
                                       ReturnType="Next"
                                       Text="{Binding TicketNumber}" />
                            </HorizontalStackLayout>
                        </Border>

                        <Label Grid.Row="3"
                               Text="Precio"
                               Style="{StaticResource EntryLabel}" />
                        <Border Grid.Row="4"
                                Style="{StaticResource EntryBorder}">
                            <Grid ColumnSpacing="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Entry x:Name="PriceEntry"
                                       Grid.Column="0"
                                       Placeholder="Ingrese el precio"
                                       Keyboard="Numeric"
                                       ReturnType="Done"
                                       Text="{Binding TicketPrice}" />
                                <Image Grid.Column="1"
                                       Source="euro.png">
                                </Image>
                            </Grid>
                        </Border>

                        <Label Grid.Row="5"
                               Text="Fecha"
                               Style="{StaticResource EntryLabel}" />
                        <Border Grid.Row="6"
                                Style="{StaticResource EntryBorder}">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnCalendarTapped" />
                            </Border.GestureRecognizers>
                            <Grid ColumnSpacing="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Image Grid.Column="0"
                                       Source="calendar.png">
                                </Image>
                                <DatePicker x:Name="datePicker"
                                            Grid.Column="1"
                                            FontSize="16"
                                            FontFamily="{StaticResource CatamaranRegular}"
                                            Format="dd 'de' MMMM 'de' yyyy"
                                            Date="{Binding TicketDate}" />
                            </Grid>
                        </Border>

                        <Button Grid.Row="7"
                                Margin="0,97,0,0"
                                Text="Agregar Ticket"
                                FontSize="20"
                                FontFamily="{StaticResource CatamaranSemiBold}"
                                CornerRadius="10"
                                Command="{Binding AddTicketCommand}" />
                    </Grid>
                </Border>
            </ScrollView>
        </Grid>
        <shared:LoaderView />
    </Grid>
</ContentPage>